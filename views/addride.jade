extends layout

block content
	.container
		h1 Add a Ride
		p.lead Add where when and if it's a round trip.
		br
		form(role="form", method="post", action="/addride", style='max-width: 300px;')
		.form-group
			input.form-control(type="text", name="destination", placeholder="Enter destination")
		.form-group
				input.form-control(type="checkbox", name="roundTrip", id="checkboxRound")
		.form-group
			input.form-control(type="text", name="dateLeaving", placeholder="Date leaving: (eg. Saturday 10am)")
		.form-group
			input.form-control(type="text", name="dateReturning", placeholder="Date returning")
		button.btn.btn-default(type="submit") Add Ride
		&nbsp
		a(href='/')
			button.btn.btn-primary(type="button") Cancel
	br
	h4= info